{
	"name": "tools/gridengine-status",
	"license": "GPL-3.0+",
	"homepage": "https://tools.wmflabs.org/gridengine-status/",
	"require": {
		"neitanod/forceutf8": "~2.0.0",
		"wikimedia/slimapp": "~0.9",
		"php": ">=7.2"
	},
	"autoload": {
		"psr-4": {
			"Tools\\GridEngineStatus\\": "src/"
		}
	},
	"require-dev": {
		"jakub-onderka/php-parallel-lint": "~1.0",
		"phpunit/phpunit": "~8.0",
		"mediawiki/mediawiki-codesniffer": "24.0.0"
	},
	"autoload-dev": {
		"psr-4": {
			"Tools\\GridEngineStatus\\": "tests/"
		}
	},
	"config": {
		"autoloader-suffix": "_tools_ges",
		"optimize-autoloader": true,
		"preferred-install": "dist"
	},
	"scripts": {
		"lint": "parallel-lint . --exclude vendor",
		"phpcs": "phpcs",
		"fix": "phpcbf",
		"phpunit": "phpunit",
		"test": [
			"composer lint",
			"composer phpunit",
			"composer phpcs"
		]
	}
}
